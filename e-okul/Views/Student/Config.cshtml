@model e_okul.Models.Student


<form method="post">
<input asp-for="@Model.Id" hidden />
<input asp-for="@Model.Name" hidden />
<input asp-for="@Model.Surname" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">User Settings</h2>
            <hr />
        </div>
        <div class="col-4">
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" disabled />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Class"></label>
                <input asp-for="Class" class="form-control" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ClassLetter"></label>
                <input asp-for="@Model.ClassLetter" class="form-control" />
                <span asp-validation-for="ClassLetter" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Go To Homepage
            </a>
        </div>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}