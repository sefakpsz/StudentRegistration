<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] E-School</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_okul.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">E-School</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>

                        @if (User.IsInRole(SD.Role_User_Student))
                        {
                            <a class="nav-link" asp-controller="Student" asp-action="Index">
                                Student
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="SignInUp" asp-action="SignIn">
                                Sign In
                            </a>
                            <a class="nav-link" asp-controller="SignInUp" asp-action="SignUp">
                                Sign Up
                            </a>
                        }

                        @*<li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Index">Student</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" asp-controller="Teacher" asp-action="Index">Teacher</a>
                            </li>*@
                        @*<li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                            <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                            </li>*@
                    </ul>
                    <form class="d-flex">
                        <ul class="navbar-nav me-auto">
                            @*<li style="margin-right:50px;" class="nav-item">
                                <a style="font-size:20px" class="nav-link" asp-controller="Student" asp-action="Config">User Settings</a>
                                </li>*@
                        </ul>
                        @*<input class="form-control me-sm-2" type="text" placeholder="Search">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>*@
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer style="position:fixed; width:100%; top:92%;" class="border-top footer text-muted">
        <div style="position:fixed; left:10%;" class="container">
            &copy; 2022 - E-School - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>